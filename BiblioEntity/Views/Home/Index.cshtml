@model List<Libro>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center d-flex justify-content-around">
    <h1 class="display-4">Books List</h1>
    <button class="btn btn-success">
        <a class="text-white" asp-action="GetLibro" asp-controller="Home" asp-route-IdLibro="0">New</a>
    </button>
</div>

<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Tipo</th>
                <th scope="col">Pages</th>
                <th scope="col">Genero</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Book in Model)
            {
                <tr>
                    <td>@Book.IdLibro</td>
                    <td>@Book.Nombre</td>
                    <td>@Book.Tipo</td>
                    <td>@Book.Pages</td>
                    <td>@Book.oGenero.Genero1</td>
                    <td>
                        <button class="btn btn-primary">
                            <a asp-action="GetLibro" asp-controller="Home" asp-route-IdLibro="@Book.IdLibro">Edit</a>
                        </button>
                        <button class="btn btn-danger">
                            <a asp-action="Delete" asp-controller="Home" asp-route-IdLibro="@Book.IdLibro">Delete</a>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
